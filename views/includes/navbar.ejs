<style>
  /* Custom Search Button */
  .btn-search {
    background-color: #ff5a5f !important; 
    color: white; 
    border-radius: 25px !important; 
    padding: 8px 20px; 
    font-size: 16px;
    transition: background-color 0.3s ease; 
   
  }

  .btn-search:hover {
    background-color: #e14b50 !important; 
    color: white !important;
  }

  .form-control {
    border-radius: 30px; /* Rounded corners */
    width: 250px; /* Set width of the search input field */
  }

  .search-container {
    display: flex;
    align-items: center;
  }
  .btn-search i{
    display: inline !important;
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm px-4" style="height: 5rem;">
  <div class="container-fluid h-100">
    <a class="navbar-brand d-flex align-items-center gap-2 h-100" href="/">
      <i class="fas fa-compass fa-lg" style="color: #ff5a5f;"></i>
      <span class="fw-bold" style="font-size: 1.5rem;">D'Raj Villas</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    
      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-search" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>search
        </button>
      </form>
    

    <div class="collapse navbar-collapse h-100" id="navbarNavAltMarkup">
      <div class="navbar-nav ms-auto d-flex align-items-center h-100 gap-3">
        <a class="nav-link" href="/listings"><i class="fa-solid fa-list"></i> Explore</a>
        <a class="nav-link" href="/listings/new"><i class="fa-solid fa-plus"></i> Add Villas</a>

        <% if (!currUser) { %>
   
          <a class="nav-link" href="/login"><i class="fa-solid fa-right-to-bracket"></i> Login</a>
          <a class="nav-link" href="/signup"><i class="fa-solid fa-user-plus"></i> Sign Up</a>
        <% } else { %>

          <form action="/logout" class="d-inline">
            <button class="btn btn-outline-danger btn-sm">
              <i class="fa-solid fa-right-from-bracket"></i> Logout
            </button>
          </form>
        <% } %>
      </div>
    </div>
  </div>
</nav>
