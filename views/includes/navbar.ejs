<style>
  .btn-search {
    background-color: #ff5a5f !important;
    color: white;
    border-radius: 20px !important;
    padding: 4px 12px;
    font-size: 13px;
    transition: background-color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 4px;
    height: 35px;
    white-space: nowrap;
  }

  .btn-search i {
    font-size: 12px;
  }

  .btn-search:hover {
    background-color: #e14b50 !important;
    color: white !important;
  }

  .form-control {
    border-radius: 20px;
    font-size: 13px;
    padding: 4px 10px;
    height: 35px;
    width: 100%;
  }

  .search-container {
    display: flex;
    align-items: center;
    gap: 6px;
    width: auto;
    max-width: 450px;
    margin-bottom: 0;
  }

  .navbar-nav .nav-link,
  .navbar-nav button {
    font-size: 13px;
    padding: 6px 10px;
  }

  .navbar-nav i {
    font-size: 13px;
    margin-right: 4px;
  }

  .navbar-brand span {
    font-size: 1.2rem;
  }

  @media (max-width: 768px) {
    .search-container {
      flex-direction: column;
      width: 100%;
      gap: 8px;
      margin-bottom: 1rem;
    }

    .navbar-nav .nav-link,
    .navbar-nav form {
      margin-bottom: 10px;
      width: 100%;
      text-align: center;
    }

    .btn-search {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm px-4" style="height: auto;">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center gap-2" href="/">
      <i class="fas fa-compass fa-sm" style="color: #ff5a5f;"></i>
      <span class="fw-bold">D'Raj Villas</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse mt-3 mt-lg-0" id="navbarNavAltMarkup">
      <!-- Search Bar -->
      <form class="search-container ms-lg-4 me-auto">
        <input class="form-control" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-search" type="submit">
          <i class="fa fa-search"></i> Search
        </button>
      </form>

      <!-- Navigation Links -->
      <div class="navbar-nav ms-auto d-flex flex-column flex-lg-row align-items-center gap-2">
        <a class="nav-link" href="/listings"><i class="fa-solid fa-list"></i> Explore</a>
        <a class="nav-link" href="/listings/new"><i class="fa-solid fa-plus"></i> Add Villas</a>

        <% if (!currUser) { %>
          <a class="nav-link" href="/login"><i class="fa-solid fa-right-to-bracket"></i> Login</a>
          <a class="nav-link" href="/signup"><i class="fa-solid fa-user-plus"></i> Sign Up</a>
        <% } else { %>
          <form action="/logout" method="GET">
            <button class="btn btn-outline-danger btn-sm">
              <i class="fa-solid fa-right-from-bracket"></i> Logout
            </button>
          </form>
        <% } %>
      </div>
    </div>
  </div>
</nav>
