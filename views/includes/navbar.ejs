<style>
  .btn-search {
    background-color: #ff5a5f !important;
    color: white;
    border-radius: 25px !important;
    padding: 8px 20px;
    font-size: 16px;
    transition: background-color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .btn-search:hover {
    background-color: #e14b50 !important;
    color: white !important;
  }

  .form-control {
    border-radius: 30px;
    width: 100%;
  }

  .search-container {
    display: flex;
    align-items: center;
    gap: 10px;
    width: 100%;
  }

  @media (max-width: 768px) {
    .search-container {
      flex-direction: column;
      gap: 8px;
      margin-bottom: 1rem;
    }

    .navbar-nav .nav-link,
    .navbar-nav form {
      margin-bottom: 10px;
      width: 100%;
      text-align: center;
    }

    .btn-search {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm px-4" style="height: auto;">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center gap-2" href="/">
      <i class="fas fa-compass fa-lg" style="color: #ff5a5f;"></i>
      <span class="fw-bold" style="font-size: 1.5rem;">D'Raj Villas</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse mt-3 mt-lg-0" id="navbarNavAltMarkup">
      <form class="search-container mb-3 mb-lg-0">
        <input class="form-control" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-search" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i> Search
        </button>
      </form>

      <div class="navbar-nav ms-auto d-flex flex-column flex-lg-row align-items-center gap-2">
        <a class="nav-link" href="/listings"><i class="fa-solid fa-list"></i> Explore</a>
        <a class="nav-link" href="/listings/new"><i class="fa-solid fa-plus"></i> Add Villas</a>

        <% if (!currUser) { %>
          <a class="nav-link" href="/login"><i class="fa-solid fa-right-to-bracket"></i> Login</a>
          <a class="nav-link" href="/signup"><i class="fa-solid fa-user-plus"></i> Sign Up</a>
        <% } else { %>
          <form action="/logout" method="POST">
            <button class="btn btn-outline-danger btn-sm">
              <i class="fa-solid fa-right-from-bracket"></i> Logout
            </button>
          </form>
        <% } %>
      </div>
    </div>
  </div>
</nav>
